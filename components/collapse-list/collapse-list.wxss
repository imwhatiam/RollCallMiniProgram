.collapse-section {
  margin-bottom: 20rpx;
  width: 100%;
}

.collapse-header {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.arrow {
  width: 12rpx;
  height: 12rpx;
  border-left: 3rpx solid #333;
  border-bottom: 3rpx solid #333;
  transform: rotate(-45deg);
  transition: transform 0.3s ease;
}

.arrow-icon.expanded .arrow {
  transform: rotate(-45deg);
}

.arrow-icon.collapsed .arrow {
  transform: rotate(45deg);
}

.collapse-content {
  overflow: hidden;
  transition: max-height 0.3s ease;
}

/* 展开时允许最高 200px，并可滚动 */
.collapse-content.expanded {
  max-height: 200px;
  overflow-y: auto;
}

/* 折叠时高度为 0 */
.collapse-content.collapsed {
  max-height: 0;
  overflow: hidden;
}
